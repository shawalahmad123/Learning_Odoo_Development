                            <opt string="Choose a pattern" data-xmlid="website.option_custom_body_image, website.option_custom_body_pattern"/>
                        </list>
                    </more>
                </content>
                <content id="theme_customize_content_colors" string="Colors" title="Choose Theme Color">

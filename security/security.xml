<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_vehicle" model="ir.module.category">
        <field name="name">Showroom Managements</field>
        <field name="description">Category Showroom Managements</field>
    </record>

    <record id="group_vehicle_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_vehicle"/>
        <field name="implied_ids" eval="[(4, ref('group_vehicle_accountant'))]"/>
    </record>

    <record id="group_vehicle_accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="module_category_vehicle"/>
        <field name="implied_ids" eval="[(4, ref('group_vehicle_viewer'))]"/>
    </record>

    <record id="group_vehicle_viewer" model="res.groups">
        <field name="name">Viewer</field>
        <field name="category_id" ref="module_category_vehicle"/>
    </record>

</odoo>

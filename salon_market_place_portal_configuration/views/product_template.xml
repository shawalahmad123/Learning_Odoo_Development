<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="product_template_custom_seller_form_view" model="ir.ui.view">
			<field name="name">product.template.custom.seller.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name='priority'>20</field>
			<field name="arch" type="xml">
				 <xpath expr="//field[@name='categ_id']" position="after">
					 <field name="marketplace_seller_id" />
                 </xpath>
			</field>
		</record>






		<record id="odoo_marketplace.wk_seller_product_template_action" model="ir.actions.act_window">
			<field name="name">Seller Products</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.template</field>
			<field name="binding_view_types">form</field>
			<field name="domain">[('status','!=','approved'),('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{ 'search_default_pending_product_filter': 1, 'default_type': 'service', 'pass_default_categ' : True, 'no_archive': 1}</field>
			<field name="view_id" ref="odoo_marketplace.wk_seller_product_template_kanban_view"/>
			<field name="search_view_id" ref="odoo_marketplace.wk_product_template_seller_filter"/>
			<field
				name="view_ids"
				eval="[(5, 0, 0),
					(0, 0, {'sequence': 1, 'view_mode': 'kanban', 'view_id': ref('odoo_marketplace.wk_seller_product_template_kanban_view')}),
					(0, 0, {'sequence': 2, 'view_mode': 'tree', 'view_id': ref('odoo_marketplace.wk_seller_product_template_tree_view')}),
					(0, 0, {'sequence': 3, 'view_mode': 'form', 'view_id': ref('odoo_marketplace.wk_seller_product_template_form_view')})
				]"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a product in your product list.
				</p>
				<p>
					Marketplace helps you to easily track all product.
				</p>
			</field>
		</record>


		<record id="odoo_marketplace.wk_seller_new_product_create_action" model="ir.actions.act_window">
			<field name="name">New Product</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.template</field>
			<field name="binding_view_types">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'default_type': 'service', 'pass_default_categ' : True}</field>
			<field name="view_id" ref="odoo_marketplace.wk_seller_product_template_form_view"/>
		</record>


		<record id="odoo_marketplace.wk_seller_product_template_approved_products_action" model="ir.actions.act_window">
			<field name="name">Seller Approved Products</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.template</field>
			<field name="binding_view_types">form</field>
			<field name="domain">[('status','=','approved'),('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'search_default_by_marketplace_seller_id': 1, 'default_type': 'service', 'pass_default_categ' : True, 'no_archive': 1}</field>
			<field name="search_view_id" ref="odoo_marketplace.wk_product_template_seller_filter"/>
			<field
				name="view_ids"
				eval="[(5, 0, 0),
					(0, 0, {'sequence': 1, 'view_mode': 'kanban', 'view_id': ref('odoo_marketplace.wk_seller_product_template_kanban_view')}),
					(0, 0, {'sequence': 2, 'view_mode': 'tree', 'view_id': ref('odoo_marketplace.wk_seller_product_template_tree_view')}),
					(0, 0, {'sequence': 3, 'view_mode': 'form', 'view_id': ref('odoo_marketplace.wk_seller_product_template_form_view')})
				]"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a product in your product list.
				</p>
				<p>
					Marketplace helps you to easily track all product.
				</p>
			</field>
		</record>

		
		<record id="odoo_marketplace.mp_product_product_action" model="ir.actions.act_window">
			<field name="name">Product Variants</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.product</field>
			<field name="binding_view_types">form</field>
			<field name="domain">[('status','=','approved'),('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'search_default_by_marketplace_seller_id': 1, 'default_type': 'service', 'pass_default_categ' : True, 'no_archive': 1}</field>
			<field name="search_view_id" ref="odoo_marketplace.wk_product_product_seller_filter"/>
			<field
				name="view_ids"
				eval="[(5, 0, 0),
					(0, 0, {'sequence': 1, 'view_mode': 'kanban','view_id': ref('odoo_marketplace.mp_product_product_kanban_view')}),
					(0, 0, {'sequence': 2, 'view_mode': 'tree', 'view_id': ref('odoo_marketplace.mp_product_product_tree_view')}),
					(0, 0, {'sequence': 3, 'view_mode': 'form', 'view_id': ref('odoo_marketplace.mp_product_product_form_view')})
				]"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to define a new product.
				</p>
			</field>
		</record>

	
	  <record id="odoo_marketplace.wk_seller_product_pending_action" model="ir.actions.act_window">
            <field name="name">Seller Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[('status','=','pending'),('marketplace_seller_id','in',['get_marketplace_seller_id()'])]</field>
            <field name="context">{'search_default_by_marketplace_seller_id': 1,'default_type':'service'}</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="odoo_marketplace.wk_seller_product_template_kanban_view"/>
        </record>



	</data>
</odoo>
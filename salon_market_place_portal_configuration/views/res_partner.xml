<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

  <record id="salon_gallery_marketplace_form_view" model="ir.ui.view">
            <field name="name">salon.gallery.marketplace.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_form_view" />
            <field name="arch" type="xml">
              
                    <xpath expr="//notebook" position="inside">

                        <page name="salon_gallery" string="Salon Gallery">
                        
                                 <group>
                                   <field name="salon_gallery" mode="kanban"  context="{'default_salon_id': id}"  options="{'create_text':'Upload Photos for your Salon'}" nolabel="1">
                                      <form>
                                      <field name="image" widget="image" options='{"size": [150, 150]}' />
                                      </form>
                                      <tree>
                                      <field name="image" widget="image" options='{"size": [150, 150]}' />
                                      </tree>

        <kanban>
           <field name="id" />
          
           <field name="image" />
          
		
         <templates>
         <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click">

                       <div class="o_kanban_image" style="width:100%">
                           <img alt="Thumbnail"
                                t-att-src="kanban_image('salon.gallery', 'image',record.id.value)"/>
                       </div>

                   
                </div>

         </t>
         </templates>
         </kanban>


                                      </field>
                                </group>
                        </page>

                         <page name="salon_specialist" string="Salon Specialist">
                        
                                  <group>
                                   <field name="salon_employees" context="{'default_salon_id': id}" options="{'create_text':'Add a Specialist'}" nolabel="0" mode="tree">
                                      
                                      <tree>
                                          
                                          <field name="name" />
                                          <field name="job_title" />
                                          <field name="department_id" />
                                          <field name="employee_average_rating" />
                                          <field name="image_1920" widget="image" options="{&quot;size&quot;: [100, 100]}" />
                                        
                                      </tree>
                                      
                                        <form>
                                          
                                          <group>
                                          <field name="name" />
                                          <field name="job_title" />
                                          <field name="company_id" invisible="1"  />
                                          <field name="employee_average_rating" />
                                          </group>
                                          <group>
                                          <field name="department_id"  />
                                          <field name="image_1920" widget="image" options="{&quot;size&quot;: [100, 100]}" />
                                        </group>
                                      </form>
                                     </field>
                                     
                                </group>
                        </page>

                    </xpath>

                    </field>

                    </record>

  <record id="salon_product_marketplace_form_view" model="ir.ui.view">
            <field name="name">salon.product.marketplace.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_product_template_form_view" />
            <field name="arch" type="xml">
              
                    <xpath expr="//field[@name='marketplace_seller_id']" position="after">

                          	<field name="service_time" />
                            <field name="discount_percentage"  attrs="{'invisible': [('is_offer', '=', False)]}"  />
                            <field name="related_specialist" widget="many2many_tags" context = "{'default_salon_id':marketplace_seller_id}" options="{'no_create': True}" />
                    </xpath>

                      <xpath expr="//field[@name='lst_price']" position="attributes">
                      <attribute name="attrs">{"readonly":[('is_offer','=',True)]}</attribute>
                          
                    </xpath>                
                  

                    <xpath expr="//field[@name='standard_price']" position="before">
                            <div>
                             <field name="is_offer" />
                             <label for="is_offer"></label>
                            </div>
                    </xpath>

                    <xpath expr="//notebook" position="inside">

                        <page string="Offer Products"   attrs="{'invisible': [('is_offer', '=', False)],'required':[('is_offer','=',True)]}" >
                          	<field name="offer_products" />

                           </page>
                    </xpath>



                    </field>

                    </record>


